<div>
<% @news.each do |news| %>
  <h2><%= link_to news.title, news %></h2>
  <% if news.created_at.present? %>
    <div class="info">created on <%= news.created_at.strftime('%b %d, %Y') %></div>
  <% end %>
  <div class="slug-line"><%= news.slug_line %></div>
<% end %>
</div>
<p> <%= link_to "New", new_news_path %> </p>
