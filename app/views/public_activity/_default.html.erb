<% activities.each do |activity| %>
<% if !activity.trackable.nil? %>
  <activity class="<%= "activity-#{activity.trackable.class.to_s.downcase}" %>">
    <%= link_to gravatar_for(activity.owner, class: "img-circle"), activity.owner %>
    <%= link_to activity.owner.username, activity.owner %>
    <%= render_activity activity %>
  </activity>
  <% end %>
<% end %>
