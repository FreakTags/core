<!DOCTYPE html>
<html>
<head>
  <title><%= page_title %></title>
  <%= stylesheet_link_tag 'core', media: 'all' %>
  <%= javascript_include_tag 'core' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <body>
    <nav id="navbar-top" class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
            <span class="sr-only"><%= t(:toggle_navigation) %></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= navbar_logo %>
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if signed_in? %>
              <li><%= link_to fa("sign-out"), destroy_session_path(:user) %></a></li>
            <% else %>
              <li><%= link_to fa("sign-in", {:text => t(:sign_in)}), new_session_path(:user) %></li>
              <li><%= link_to fa("sign-in", {:text => t(:sign_up)}), new_registration_path(:user) %></li>
            <% end %>
          </ul>
        </div>
      </div>
   </nav>
   <content class="container">
      <% if signed_in? %>
        <nav id="navbar-left" class="col-lg-1 col-lg-offset-1 col-md-1 col-xs-1" >
          <div class="row">
            <center><%= user_image_tag %></center>
            <center><h5><%= link_to current_user.username, profile_path(current_user.username) %></h5></center>
            <ul id="navbar-left-links"class="nav nav-stacked">
              <li><%= link_to fa("dashboard", text: t(:dashboard)), dashboard_path %></li>
              <li><%= link_to fa("newspaper-o", text: t(:news)), news_index_path %></li>
              <li><%= link_to fa("wrench", text: t(:account)), edit_registration_path(:user) %></li>
              <li><%= link_to fa("sign-out", text: t(:sign_out)), destroy_session_path(:user) %></li>
            </ul>
          </div>
        </nav>
      <% end %>
      <yield class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-3 col-xs-offset-2">
        <% flash.each do |key, value| %>
          <% key = (key == 'alert') ? 'danger' : key %>
          <% key = (key == 'notice') ? 'info' : key %>
          <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </yield>
   </content>
</body>
</html>
