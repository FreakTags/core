<!DOCTYPE html>
<html>
<head>
  <title><%= t(:freaktags) %></title>
  <%= stylesheet_link_tag 'core', media: 'all' %>
  <%= javascript_include_tag 'core' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <body>
    <nav id="navbar-top" class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
            <span class="sr-only"><%= t(:toggle_navigation) %></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to navbar_logo, (signed_in? ? dashboard_path : root_path), {:class => "navbar-brand"} %>
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if signed_in? %>
              <li><%= link_to fa("sign-out", {:text => t(:sign_out)}), "/account/sign-out" %></a></li>
            <% else %>
              <li><%= link_to fa("sign-in", {:text => t(:sign_in)}), new_session_path(:user) %></li>
              <li><%= link_to fa("sign-in", {:text => t(:sign_up)}), new_registration_path(:user) %></li>
            <% end %>
          </ul>
        </div>
      </div>
   </nav>
   <content class="container">
      <% if signed_in? %>
        <nav id="navbar-left" class="col-lg-1 col-lg-offset-1 col-md-1 col-xs-1" >
          <div class="row">
            <center><%= user_image_tag %></center>
            <center><h5><%= link_to current_user.name, profile_path(current_user.name) %></h5></center>
            <ul id="navbar-left-links"class="nav nav-stacked">
              <li><%= link_to fa("dashboard"), dashboard_path %></li>
              <li><%= link_to fa("wrench"), "/account/settings" %></li>
              <li><%= link_to fa("sign-out"), "/account/sign-out" %></a></li>
            </ul>
          </div>
        </nav>
      <% end %>
      <yield class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-3 col-xs-offset-2">
        <%= yield %>
      </yield>
   </content>
</body>
</html>
